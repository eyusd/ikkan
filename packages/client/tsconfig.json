{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "paths": {
      "@ikkan/core": ["../core/src"]
